{%- extends '@RekalogikaRekapager/base.html.twig' -%}

{%- block pager -%}
    {%- set id = 'rekapager-' ~ random() -%}

    <style>
        #{{ id }} nav {
            border-top: 1px solid #eee;
            margin-top: 1em;
            padding-top: 0.5em;
        }

        #{{ id }} .pagination a {
            display: block;
            padding: 0.5em 1em;
            margin: 0 0.1em;
            border: 1px solid #999;
            border-radius: 0.2em;
            text-decoration: none;
        }

        #{{ id }} .pagination span.gap {
            display: block;
            padding: 0.5em 0.3em;
            margin: 0 0.1em;
            border: none;
            border-radius: 0.2em;
            text-decoration: none;
        }

        #{{ id }} .pagination a[aria-current="page"] {
            background-color: #333;
            color: #fff;
        }

        #{{ id }} .pagination .disabled {
            background-color: #ddd;
            color: #555;
        }
    </style>

    <nav id="{{ id }}">
        <ul class="pagination">
            {{- block("items") -}}
        </ul>
    </nav>
{%- endblock -%}

{%- block gap -%}
    <li>
        <span class="gap">{{- block("label_gap") -}}</span>
    </li>
{%- endblock -%}
